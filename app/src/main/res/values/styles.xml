<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Common attributes -->
        <item name="PrimaryTextColor">@color/medium_blue</item>
        <item name="SecondaryTextColor">@color/medium_blue_40pc</item>
        <item name="LightTextColor">@color/material_white_primary</item>
        <item name="ErrorTextColor">@color/error_color</item>

        <!-- Selectors -->
        <item name="PrimarySelector">@drawable/default_selector_blue</item>

        <!-- Button styles -->
        <item name="DefaultButtonTextColor">@color/material_white_primary</item>

        <item name="FilledButtonBackground">@drawable/button_rubine</item>
        <item name="FilledThemeButtonBackground">@drawable/button_blue</item>
        <item name="OutlineButtonBackground">@drawable/button_blue_outline</item>
        <item name="BorderlessButtonBackground">@drawable/default_selector_blue</item>

        <!-- Navigation Icons -->
        <item name="NavigationUpArrow">@drawable/ic_arrow_back_white_24dp</item>
        <item name="NavigationCloseIcon">@drawable/ic_close_white_24dp</item>

        <!-- Style Sheet -->
        <item name="StyleSheetNavigationIconColor">@color/material_white_primary</item>

    </style>

    <!--
        Default Text Styles
        - Based on https://material.io/design/typography/the-type-system.html#
     -->
    <style name="Text.ProjectApplication.Heading1" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.ProjectApplication.Heading1.Light">
        <item name="android:textColor">?attr/LightTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Heading2" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Heading2.Light">
        <item name="android:textColor">?attr/LightTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.ProjectApplication.Title.Secondary">
        <item name="android:textColor">?attr/SecondaryTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Title.Light">
        <item name="android:textColor">?attr/LightTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Subtitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Subtitle.Secondary">
        <item name="android:textColor">?attr/SecondaryTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Subtitle.Light">
        <item name="android:textColor">?attr/LightTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.ProjectApplication.Body1.Secondary">
        <item name="android:textColor">?attr/SecondaryTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Body1.Light">
        <item name="android:textColor">?attr/LightTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Body1.Error">
        <item name="android:textColor">?attr/ErrorTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Body2.Secondary">
        <item name="android:textColor">?attr/SecondaryTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Body2.Light">
        <item name="android:textColor">?attr/LightTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Body2.Error">
        <item name="android:textColor">?attr/ErrorTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Caption1" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.ProjectApplication.Caption1.Small">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>

    <style name="Text.ProjectApplication.Caption1.Secondary">
        <item name="android:textColor">?attr/SecondaryTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Caption1.Secondary.Small">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>

    <style name="Text.ProjectApplication.Caption1.Light">
        <item name="android:textColor">?attr/LightTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Caption1.Light.Small">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>

    <style name="Text.ProjectApplication.Caption1.Error">
        <item name="android:textColor">?attr/ErrorTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Caption1.Error.Small">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>

    <style name="Text.ProjectApplication.Caption2" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/PrimaryTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Caption2.Small">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>

    <style name="Text.ProjectApplication.Caption2.Secondary">
        <item name="android:textColor">?attr/SecondaryTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Caption2.Secondary.Small">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>

    <style name="Text.ProjectApplication.Caption2.Light">
        <item name="android:textColor">?attr/LightTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Caption2.Light.Small">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>

    <style name="Text.ProjectApplication.Caption2.Error">
        <item name="android:textColor">?attr/ErrorTextColor</item>
    </style>

    <style name="Text.ProjectApplication.Caption2.Error.Small">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>
    <!-- End of default text styles -->

    <!-- Default button styles -->
    <style name="Button.ProjectApplication" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
    </style>

    <style name="Button.ProjectApplication.Filled">
        <item name="android:textColor">?attr/DefaultButtonTextColor</item>
        <item name="android:background">?attr/FilledButtonBackground</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing_small</item>
    </style>

    <style name="Button.ProjectApplication.Filled.Theme">
        <item name="android:textColor">?attr/DefaultButtonTextColor</item>
        <item name="android:background">?attr/FilledThemeButtonBackground</item>
    </style>

    <style name="Button.ProjectApplication.Outline">
        <item name="android:textColor">?attr/PrimaryTextColor</item>
        <item name="android:background">?attr/OutlineButtonBackground</item>
    </style>

    <style name="Button.ProjectApplication.Borderless">
        <item name="android:textColor">?attr/PrimaryTextColor</item>
        <item name="android:background">?attr/BorderlessButtonBackground</item>
    </style>
    <!-- End of default button styles -->

</resources>
